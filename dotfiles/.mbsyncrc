#################################
## Account gmail ################
#################################

# Account information
IMAPAccount gmail
Host imap.gmail.com
User abelardotomasjb@gmail.com
Port 993
PassCmd "gpg2 --batch --decrypt ~/.gpg_auth/.google"
UseIMAPS yes
CertificateFile /etc/ssl/certs/ca-certificates.crt

# Define the remote storage (use the IMAP account specified above)
IMAPStore gmail-remote
Account gmail

# Local storage
MaildirStore gmail-local
Path ~/Mail/
Inbox ~/Mail/INBOX

# Connection between remote and local folders
Channel gmail-inbox
Master :gmail-remote:
Slave :gmail-local:
Patterns "INBOX"
Create Both
Expunge Both
SyncState *

Channel gmail-trash
Master :gmail-remote:"[Gmail]/Bin"
Slave :gmail-local:"[Gmail].Bin"
Create Both
Expunge Both
SyncState *

Channel gmail-sent
Master :gmail-remote:"[Gmail]/Sent Mail"
Slave :gmail-local:"[Gmail].Sent Mail"
Create Both
Expunge Both
SyncState *

Channel gmail-all
Master :gmail-remote:"[Gmail]/All Mail"
Slave :gmail-local:"[Gmail].All Mail"
Create Both
Expunge Both
SyncState *

Channel gmail-starred
Master :gmail-remote:"[Gmail]/Starred"
Slave :gmail-local:"[Gmail].Starred"
Create Both
Expunge Both
SyncState *

# Group channels together, so we can sync them
# Use: "mbsync gmail"
Group gmail
Channel gmail-inbox
Channel gmail-sent
Channel gmail-trash
Channel gmail-starred
# Channel gmail-all


#################################
######## Account mailbox ########
#################################

IMAPAccount work
Host imapmail.intel.com
User ajaraber
UseIMAPS yes
CertificateFile ~/.cert/imapmail.intel.com.pem
PipelineDepth 1

# Remote storage
IMAPStore work-remote
Account work

# Local storage
MaildirStore work-local
Path ~/Mail/Work/
Inbox ~/Mail/Work/INBOX

# Connection between remote and local folders
Channel work-inbox
Master :work-remote:
Slave :work-local:
Patterns "INBOX"
Create Both
Expunge Both
SyncState *

Channel work-sent
Master :work-remote:"Sent"
Slave :work-local:"Sent"
Create Both
Expunge Both
SyncState *

# Group channels together, so we can sync them
# Use: "mbsync work"
Group work
Channel work-inbox
Channel work-sent

